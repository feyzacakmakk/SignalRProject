@model UpdateDiscountDto
@{
    ViewData["Title"] = "UpdateDiscount";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İndirimli Ürün İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni İndirimli Ürün Girişi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="categoryid">İndirim ID</label>
								<input type="text" asp-for="DiscountID" class="form-control" id="categoryid" disabled>
								<input type="hidden" asp-for="DiscountID">
								<label for="name">Ürün Giriniz</label>
								<input type="text" asp-for="Title" class="form-control" id="name">

							</div>

						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="amount">Ürün İndirim Oranını Giriniz</label>
								<input type="text" asp-for="Amount" class="form-control" id="amount">

							</div>

						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="imageurl">Ürün Görselini Giriniz</label>
								<input type="text" asp-for="ImageUrl" class="form-control" id="iamgeurl">

							</div>

						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="description">Ürün Açıklamasını Giriniz</label>
								<input type="text" asp-for="Description" class="form-control" id="description">

							</div>

						</div>

						<div class="card-action">
							<button class="btn btn-primary">İndirimli Ürün Ekle</button>
						</div>
					</div>
				</form>


			</div>


		</div>
	</div>
</div>



