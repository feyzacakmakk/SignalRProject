@model UpdateContactDto
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana Sayfa iletişim Bilgi İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Ana Sayfa iletişim Bilgileri Güncelleme Sayfası</div>
						</div>
						<div class="card-body">

							<div class="form-group">
								<label for="categoryid">iletişim ID</label>
								<input type="text" asp-for="ContactID" class="form-control" id="categoryid" disabled>
								<input type="hidden" asp-for="ContactID">
								<br />
								
									<label for="location">Lokasyonu Giriniz</label>
									<input type="text" asp-for="Location" class="form-control" id="location">

							</div>
						</div>
						
						<div class="card-body">
							<div class="form-group">
								<label for="phonenumber">Telefon Numarasını Giriniz</label>
								<input type="text" asp-for="PhoneNumber" class="form-control" id="phonenumber">

							</div>

						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="mail">Mail adresini Giriniz</label>
								<input type="email" asp-for="Mail" class="form-control" id="mail">

							</div>

						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="phonenumber">Alt Başlık Giriniz</label>
								<input type="text" asp-for="FooterTitle" class="form-control" id="phonenumber">

							</div>

						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="title"> Giriniz</label>
								<input type="text" asp-for="PhoneNumber" class="form-control" id="title">

							</div>

						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="opendays">Açık Günleri Giriniz</label>
								<input type="text" asp-for="OpenDays" class="form-control" id="opendays">

							</div>

						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="openhours">Açık Günlerin Saatleri Giriniz</label>
								<input type="text" asp-for="OpenHours" class="form-control" id="openhours">

							</div>

						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="opendaysdescription">Açık Günlerin Açıklaması Giriniz</label>
								<input type="text" asp-for="OpenDaysDescription" class="form-control" id="opendaysdescription">

							</div>

						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="description">Açıklama Giriniz</label>
								<textarea rows="5" asp-for="FooterDescription" class="form-control" id="description"></textarea>

							</div>

						</div>
						<div class="card-action">
							<button class="btn btn-primary">İletişim Bilgisini Güncelle</button>
						</div>
					</div>


				</form>


			</div>


		</div>
	</div>
</div>

