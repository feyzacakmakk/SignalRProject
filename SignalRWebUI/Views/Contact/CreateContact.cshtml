@model CreateContactDto
@{
    ViewData["Title"] = "CreateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana Sayfa İletişim Bilgi İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni İletişim Yazı Girişi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="location">Lokasyonu Giriniz</label>
								<input type="text" asp-for="Location" class="form-control" id="location">

							</div>

						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="phonenumber">Telefon Numarasını Giriniz</label>
								<input type="text" asp-for="PhoneNumber" class="form-control" id="phonenumber">

							</div>

						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="mail">Mail adresini Giriniz</label>
								<input type="email" asp-for="Mail" class="form-control" id="mail">

							</div>

						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="description">Açıklama Giriniz</label>
								<textarea rows="5" asp-for="FooterDescription" class="form-control" id="description"></textarea>

							</div>

						</div>
						<div class="card-action">
							<button class="btn btn-primary">İletişim Bilgi Yazısını Ekle</button>
						</div>
					</div>
				</form>


			</div>


		</div>
	</div>
</div>



