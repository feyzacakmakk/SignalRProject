@model CreateAboutDto
@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana Sayfa Hakkımızda İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Hakkımızda Yazı Girişi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="title">Başlığı Adını Giriniz</label>
								<input type="text" asp-for="Title" class="form-control" id="title">

							</div>

						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="imageUrl">Görselin Url'ini Giriniz</label>
								<input type="text" asp-for="ImageUrl" class="form-control" id="imageUrl">

							</div>

						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="description">Açıklamayı Giriniz</label>
								<textarea rows="5" asp-for="Description" class="form-control" id="description"></textarea>

							</div>

						</div>
						<div class="card-action">
							<button class="btn btn-primary">Hakkımda Yazısını Ekle</button>
						</div>
					</div>
				</form>


			</div>


		</div>
	</div>
</div>


