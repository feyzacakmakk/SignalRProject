@model UpdateBookingDto
@{
	ViewData["Title"] = "UpdateBooking";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Rezervasyon İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Rezervasyon Girişi</div>
						</div>
						<div class="card-body">
							
							<div class="form-group">
								<label for="categoryid">Kategori ID</label>
								<input type="text" asp-for="BookingID" class="form-control" id="categoryid" disabled>
								<input type="hidden" asp-for="BookingID">
								<br />
								<label for="name">Ad Soyad Giriniz</label>
								<input type="text" asp-for="Name" class="form-control" id="name">

							</div>

						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="phonenumber">Telefon No Giriniz</label>
								<input type="text" asp-for="Phone" class="form-control" id="phonenumber">

							</div>

						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="mail">Mail Adresi Giriniz</label>
								<input type="email" asp-for="Mail" class="form-control" id="mail">

							</div>

						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="personcount">Kişi Sayısını Giriniz</label>
								<input type="text" asp-for="PersonCount" class="form-control" id="personcount">

							</div>

						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="date">Rezervasyon Tarihini Giriniz</label>
								<input type="date" asp-for="Date" class="form-control" id="date">

							</div>

						</div>
						
						<div class="card-action">
							<button class="btn btn-primary">Rezervasyonu Güncelle</button>
						</div>
					</div>
				</form>


			</div>


		</div>
	</div>
</div>


